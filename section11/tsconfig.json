// JS 프로젝트 typescript 프로젝트로 변환 과정
// 1. 타입선언 패키지 설치
// -> npm i @types/node @types/react @types/react-dom @types/jest
// 2. tsconfig.json 파일 생성
// 3. 모든 JS -> JSX
// 4. 개별 파일 하나씩 TSX 형식으로 변환
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    // export default 가 없는 import에 불러오기를 허용하는 옵션
    "esModuleInterop": true,
    // 타입스크립트 컴파일러는 기본적으로 jsx 문법 해석 불가
    // jsx 해석 가능하도록 옵션 추가
    "jsx": "react-jsx"
  },
  "include": ["src"]
}
